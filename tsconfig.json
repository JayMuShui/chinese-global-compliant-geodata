{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.json"]
} 